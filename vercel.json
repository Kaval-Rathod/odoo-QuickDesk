{
  "rewrites": [
    {
      "source": "/auth",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/tickets",
      "destination": "/index.html"
    },
    {
      "source": "/tickets/create",
      "destination": "/index.html"
    },
    {
      "source": "/tickets/:id",
      "destination": "/index.html"
    },
    {
      "source": "/profile",
      "destination": "/index.html"
    },
    {
      "source": "/analytics",
      "destination": "/index.html"
    },
    {
      "source": "/admin/users",
      "destination": "/index.html"
    },
    {
      "source": "/admin/categories",
      "destination": "/index.html"
    },
    {
      "source": "/admin/settings",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 